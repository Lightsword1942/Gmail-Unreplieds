<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs
        title="Gmail Unreplieds"
        directory_title="Gmail Unreplieds"
        description="Shows unreplied emails on Gmail"
        height="15"
        author="Dairon Medina Caro"
        author_email="dairon.medina+support@gmail.com"
        author_location="Cienfuegos, Cuba"
        thumbnail="https://github.com/codeadict/Gmail-Unreplieds/raw/build/extras/thumb.png"
        category="tools">

        <!--Icon-->
        <Icon type="image/png">https://github.com/codeadict/Gmail-Unreplieds/raw/build/extras/favicon.png</Icon>

        <!-- Load Languages -->
        <Locale messages="https://github.com/codeadict/Gmail-Unreplieds/raw/build/gmail-gadget/locales/ALL_ALL.xml"/>
        <Locale lang="de" messages="https://github.com/codeadict/Gmail-Unreplieds/raw/build/gmail-gadget/locales/de_ALL.xml"/>
        <Locale lang="es" messages="https://github.com/codeadict/Gmail-Unreplieds/raw/build/gmail-gadget/locales/es_ALL.xml"/>


        <!-- Feature Dependencies -->

        <Require feature="dynamic-height"/>

        <!-- The use of Google-Caja feature dont works on production yet -->
        <!--uncomment when it become available on future -->

        <!--*** <Require feature="caja"/> ***-->
    </ModulePrefs>

    <!-- The Content -->
    <Content type="html" view="card">
        <![CDATA[
        <!-- Load jQuery -->
        <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'></script>



        ]]>
    </Content>
</Module>
